<Page loaded="pageLoaded">
    <StackLayout>
        <StackLayout class='title-background'>
            <Label text='Shrimp Counter!' class='title'/> 
        </StackLayout>
        
        <Label textWrap='true' text='Don&apos;t loose track of how many shrimp you have eaten!' />
            <Label id='shrimpCount' text='Shrimp Eaten:' /> 
            <Button text='Add Shrimp' tap='onTapIncrease' class='change-number'/>
                
            <Button text='Subtract Shrimp' tap='onTapDecrease' class='change-number'/> 
    </StackLayout>

    
</Page>